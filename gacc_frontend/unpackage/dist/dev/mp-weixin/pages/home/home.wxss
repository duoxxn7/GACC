/* 文章场景相关 */
.container {
  background-color: #f5f5f5;
  padding: 20rpx;
}
/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 40rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}
.search-bar .placeholder {
  margin-left: 15rpx;
  color: #999;
  font-size: 28rpx;
}
/* 横向轮播 */
.horizontal-swiper {
  height: 350rpx;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 40rpx;
}
.horizontal-swiper .swiper-item {
  position: relative;
  width: 100%;
  height: 100%;
}
.horizontal-swiper .swiper-item .swiper-image {
  width: 100%;
  height: 100%;
}
.horizontal-swiper .swiper-item .swiper-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  color: #fff;
}
.horizontal-swiper .swiper-item .swiper-overlay .item-name {
  font-size: 36rpx;
  font-weight: bold;
}
.horizontal-swiper .swiper-item .swiper-overlay .game-name {
  font-size: 28rpx;
  margin: 5rpx 0;
}
.horizontal-swiper .swiper-item .swiper-overlay .price {
  font-size: 32rpx;
  color: #ffd700;
}
/* 纵向楼层图 */
.floor-container .floor-item {
  margin-bottom: 0rpx;
  /* 关键：父容器必须是 flex-row 并允许换行 */
}
.floor-container .floor-item .floor-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}
.floor-container .floor-item .game-items {
  display: flex;
  flex-direction: row;
  /* 横向铺排 */
  flex-wrap: wrap;
  /* 允许换行 */
  justify-content: space-between;
}
.floor-container .floor-item .item-card {
  width: 49%;
  margin-bottom: 20rpx;
  /* 下一行留点距离 */
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}
.floor-container .floor-item .item-card .item-image {
  width: 100%;
  height: 200rpx;
}
.floor-container .floor-item .item-card .item-info {
  padding: 16rpx;
}
.floor-container .floor-item .item-card .item-info .item-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}
.floor-container .floor-item .item-card .item-info .seller {
  font-size: 24rpx;
  color: #304866;
  margin-bottom: 8rpx;
}
.floor-container .floor-item .item-card .item-info .type {
  font-size: 24rpx;
  color: #31b7ff;
  margin-bottom: 8rpx;
}
.floor-container .floor-item .item-card .item-info .price {
  font-size: 28rpx;
  color: #e64340;
  margin-top: 10rpx;
}

