<view class="upload-container"><view class="image-preview-section"><block wx:if="{{tempImagePath}}"><image class="preview-image" src="{{tempImagePath}}" mode="aspectFill"></image></block><block wx:else><button data-event-opts="{{[['tap',[['chooseImage',['$event']]]]]}}" class="upload-btn" bindtap="__e">+ 上传商品图片</button></block></view><view class="form-section"><view class="form-item"><text class="form-label">图片路径</text><input class="form-input" placeholder="例如: /static/items/example.jpg" data-event-opts="{{[['input',[['__set_model',['$0','ItemImage','$event',[]],['item']]]]]}}" value="{{item.ItemImage}}" bindinput="__e"/></view><view class="form-item"><text class="form-label">商品名称</text><input class="form-input" placeholder="请输入商品名称" data-event-opts="{{[['input',[['__set_model',['$0','ItemName','$event',[]],['item']]]]]}}" value="{{item.ItemName}}" bindinput="__e"/></view><view class="form-item"><text class="form-label">所属游戏</text><input class="form-input" placeholder="请输入游戏名称" data-event-opts="{{[['input',[['__set_model',['$0','GameName','$event',[]],['item']]]]]}}" value="{{item.GameName}}" bindinput="__e"/></view><view class="form-item"><text class="form-label">商品类型</text><input class="form-input" placeholder="请输入商品类型" data-event-opts="{{[['input',[['__set_model',['$0','ItemType','$event',[]],['item']]]]]}}" value="{{item.ItemType}}" bindinput="__e"/></view><view class="form-item"><text class="form-label">商品价格</text><input class="form-input" type="number" placeholder="0.00" data-event-opts="{{[['input',[['__set_model',['$0','Price','$event',[]],['item']]]]]}}" value="{{item.Price}}" bindinput="__e"/></view><view class="form-item"><text class="form-label">商品库存</text><input class="form-input" type="number" placeholder="0" data-event-opts="{{[['input',[['__set_model',['$0','Stock','$event',[]],['item']]]]]}}" value="{{item.Stock}}" bindinput="__e"/></view></view><view class="action-bar"><button data-event-opts="{{[['tap',[['submitItem',['$event']]]]]}}" class="btn-submit" bindtap="__e">提交商品</button></view></view>