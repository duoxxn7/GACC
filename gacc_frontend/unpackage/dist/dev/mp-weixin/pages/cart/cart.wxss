
.cart-container.data-v-0f00adf4 {
  padding: 20rpx;
  padding-bottom: 120rpx;
  /* 留出空间给底部按钮 */
  min-height: 100vh;
  background-color: #f7f7f7;
}

/* 购物车商品项 */
.cart-item.data-v-0f00adf4 {
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}
.item-selector.data-v-0f00adf4 {
  margin-right: 20rpx;
}
.item-image.data-v-0f00adf4 {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}
.item-details.data-v-0f00adf4 {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.item-name.data-v-0f00adf4 {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  font-weight: bold;
}
.item-price.data-v-0f00adf4 {
  font-size: 26rpx;
  color: #e64340;
  margin-bottom: 20rpx;
}
.quantity-control.data-v-0f00adf4 {
  display: flex;
  align-items: center;
}
.quantity-control button.data-v-0f00adf4 {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  padding: 0;
  font-size: 28rpx;
}
.quantity.data-v-0f00adf4 {
  margin: 0 20rpx;
  font-size: 28rpx;
}
.delete-btn.data-v-0f00adf4 {
  margin-left: 20rpx;
  color: #999;
  border: 1rpx solid #eee;
  background-color: transparent;
}

/* 空购物车样式 */
.empty-cart.data-v-0f00adf4 {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
}
.empty-image.data-v-0f00adf4 {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 30rpx;
}
.empty-text.data-v-0f00adf4 {
  font-size: 28rpx;
  color: #999;
}

/* 删除原有的 .select-all-bar 样式 */

/* 修改后的底部操作栏样式 */
.action-bar.data-v-0f00adf4 {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.08);
  z-index: 10;
}

/* 新增全选区域样式 */
.select-section.data-v-0f00adf4 {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}
.select-all-text.data-v-0f00adf4 {
  margin-left: 10rpx;
  font-size: 28rpx;
  color: #333;
}

/* 调整金额区域 */
.amount-section.data-v-0f00adf4 {
  flex: 1;
  display: flex;
  align-items: center;
  /* 改为居中对齐 */
}
.total-label.data-v-0f00adf4 {
  font-size: 28rpx;
  color: #666;
  margin-right: 10rpx;
}
.total-amount.data-v-0f00adf4 {
  font-size: 32rpx;
  color: #e64340;
  font-weight: bold;
}

/* 调整按钮区域 */
.button-section.data-v-0f00adf4 {
  display: flex;
  margin-left: auto;
  /* 让按钮组靠右 */
}
.btn-refresh.data-v-0f00adf4 {
  width: 120rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-right: 20rpx;
  background-color: #f1f1f1;
  color: #666;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
}
.btn-checkout.data-v-0f00adf4 {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #67c23a;
  color: white;
  border-radius: 40rpx;
  font-size: 30rpx;
}
.btn-checkout[disabled].data-v-0f00adf4 {
  background-color: #c8c9cc;
  color: #fff;
}

