<view class="detail-container"><swiper class="detail-swiper" circular="{{true}}" autoplay="{{true}}" interval="4000"><block wx:if="{{itemDetail.ItemImage}}"><swiper-item><image class="detail-image" src="{{itemDetail.ItemImage}}" mode="aspectFit"></image></swiper-item></block></swiper><view class="info-section"><text class="item-name">{{itemDetail.ItemName}}</text><view class="price-row"><text class="price">{{"¥"+itemDetail.Price}}</text><text class="stock">{{"库存："+itemDetail.Stock}}</text></view><view class="meta-row"><text class="meta">{{"游戏："+itemDetail.GameName}}</text><text class="meta">{{"分类："+itemDetail.ItemType}}</text></view><view class="seller-row"><text class="meta">{{"商家："+itemDetail.SellerName}}</text></view></view><view class="divider"></view><view class="action-bar"><button data-event-opts="{{[['tap',[['showQuantityModal',['$event']]]]]}}" class="btn-cart" bindtap="__e">加入购物车</button></view><block wx:if="{{isModalVisible}}"><view class="quantity-modal"><view class="modal-content"><view class="modal-header">选择数量</view><view class="quantity-selector"><button data-event-opts="{{[['tap',[['decrementQuantity',['$event']]]]]}}" bindtap="__e">-</button><text>{{selectedQuantity}}</text><button data-event-opts="{{[['tap',[['incrementQuantity',['$event']]]]]}}" bindtap="__e">+</button></view><view class="modal-actions"><button data-event-opts="{{[['tap',[['closeModal',['$event']]]]]}}" bindtap="__e">取消</button><button data-event-opts="{{[['tap',[['addToCartWithQuantity',['$event']]]]]}}" bindtap="__e">确认</button></view></view></view></block></view>