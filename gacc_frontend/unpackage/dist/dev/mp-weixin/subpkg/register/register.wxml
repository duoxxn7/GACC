<view class="container"><view class="card register-card"><view class="card-header"><text class="card-title">用户注册</text></view><view class="card-body"><view class="form-item"><text class="form-label">用户昵称</text><input class="uni-input form-input" type="text" placeholder="请输入用户昵称" maxlength="50" data-event-opts="{{[['input',[['__set_model',['$0','userID','$event',[]],['form']]]]]}}" value="{{form.userID}}" bindinput="__e"/></view><view class="form-item"><text class="form-label">用户姓名</text><input class="uni-input form-input" type="text" placeholder="请输入用户姓名" maxlength="20" data-event-opts="{{[['input',[['__set_model',['$0','userName','$event',[]],['form']]]]]}}" value="{{form.userName}}" bindinput="__e"/></view><view class="form-item"><text class="form-label">手机号</text><input class="uni-input form-input" type="number" placeholder="请输入11位手机号" maxlength="11" data-event-opts="{{[['input',[['__set_model',['$0','phoneNumber','$event',[]],['form']]]]]}}" value="{{form.phoneNumber}}" bindinput="__e"/></view><view class="form-item"><text class="form-label">身份证号</text><input class="uni-input form-input" type="idcard" placeholder="请输入18位身份证号" maxlength="18" data-event-opts="{{[['input',[['__set_model',['$0','idNumber','$event',[]],['form']]]]]}}" value="{{form.idNumber}}" bindinput="__e"/></view><view class="form-item"><text class="form-label">密码</text><input class="uni-input form-input" type="password" placeholder="请输入6-20位密码" maxlength="20" data-event-opts="{{[['input',[['__set_model',['$0','password','$event',[]],['form']]]]]}}" value="{{form.password}}" bindinput="__e"/></view><view class="form-item"><text class="form-label">确认密码</text><input class="uni-input form-input" type="password" placeholder="请再次输入密码" maxlength="20" data-event-opts="{{[['input',[['__set_model',['$0','confirmPassword','$event',[]],['form']]]]]}}" value="{{form.confirmPassword}}" bindinput="__e"/></view><view class="form-item"><text class="form-label">用户角色</text><picker class="role-picker" value="{{roleIndex}}" range="{{roleOptions}}" data-event-opts="{{[['change',[['onRoleChange',['$event']]]]]}}" bindchange="__e"><view class="picker">{{''+(form.role||'请选择用户角色')+''}}</view></picker></view><button data-event-opts="{{[['tap',[['handleRegister',['$event']]]]]}}" class="btn-register" bindtap="__e">注册</button><view data-event-opts="{{[['tap',[['goToLogin',['$event']]]]]}}" class="login-link" bindtap="__e"><text>已有账号？去登录</text></view></view></view></view>